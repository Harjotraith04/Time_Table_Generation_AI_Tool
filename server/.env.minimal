# =============================================================================
# MINIMAL ENVIRONMENT CONFIGURATION FOR SERVER TO RUN
# =============================================================================
# These are the essential environment variables needed to start the server
# Copy these values to your .env file
# =============================================================================

# =============================================================================
# ESSENTIAL SERVER CONFIGURATION
# =============================================================================
PORT=8000
NODE_ENV=development

# =============================================================================
# ESSENTIAL DATABASE CONFIGURATION
# =============================================================================
# REQUIRED: MongoDB must be running on this URI
MONGODB_URI=mongodb://localhost:27017/timetable_generator

# =============================================================================
# ESSENTIAL AUTHENTICATION CONFIGURATION
# =============================================================================
# REQUIRED: Secret key for JWT tokens (CHANGE THIS!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# =============================================================================
# ESSENTIAL CLIENT CONFIGURATION
# =============================================================================
# REQUIRED: URL of your React client (for CORS)
CLIENT_URL=http://localhost:5173

# =============================================================================
# SETUP CHECKLIST:
# =============================================================================
# 1. ✅ Install MongoDB and ensure it's running
# 2. ✅ Create .env file in server directory with above variables
# 3. ✅ Run: npm install (to install dependencies)
# 4. ✅ Run: npm start or npm run dev (to start server)
# 5. ✅ Verify: Visit http://localhost:8000/api/health to check if server is running
# =============================================================================
