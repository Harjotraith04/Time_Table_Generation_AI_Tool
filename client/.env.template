# =============================================================================
# TIMETABLE GENERATOR CLIENT ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and update the values according to your environment
# Do not commit the actual .env file to version control
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Base URL for the backend API server
# This should match the server's URL and port
VITE_API_URL=http://localhost:8000/api

# =============================================================================
# GOOGLE OAUTH CONFIGURATION (OPTIONAL)
# =============================================================================
# Google OAuth Client ID for authentication
# This should match the server's Google OAuth configuration
VITE_GOOGLE_CLIENT_ID=your-google-client-id

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application title/name
VITE_APP_TITLE=Timetable Generator

# Application description
VITE_APP_DESCRIPTION=AI-Powered College Timetable Generation System

# Application version
VITE_APP_VERSION=1.0.0

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable development mode features (true/false)
VITE_DEV_MODE=true

# Enable debug logging in development (true/false)
VITE_DEBUG=false

# =============================================================================
# SOCKET.IO CONFIGURATION
# =============================================================================
# Socket.IO server URL (should match the backend server)
VITE_SOCKET_URL=http://localhost:8000

# Enable Socket.IO for real-time updates (true/false)
VITE_SOCKET_ENABLED=true

# =============================================================================
# THEME CONFIGURATION
# =============================================================================
# Default theme (light/dark)
VITE_DEFAULT_THEME=light

# Enable theme persistence (true/false)
VITE_THEME_PERSISTENCE=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable advanced algorithm features (true/false)
VITE_ENABLE_ADVANCED_ALGORITHMS=true

# Enable bulk import features (true/false)
VITE_ENABLE_BULK_IMPORT=true

# Enable export features (true/false)
VITE_ENABLE_EXPORT=true

# Enable real-time notifications (true/false)
VITE_ENABLE_NOTIFICATIONS=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Maximum file size for uploads in MB
VITE_MAX_UPLOAD_SIZE=5

# Request timeout in milliseconds
VITE_REQUEST_TIMEOUT=30000

# Enable client-side caching (true/false)
VITE_ENABLE_CACHING=true

# Cache duration in milliseconds (5 minutes = 300000)
VITE_CACHE_DURATION=300000

# =============================================================================
# ANALYTICS CONFIGURATION (OPTIONAL)
# =============================================================================
# Google Analytics ID (if using Google Analytics)
VITE_GA_ID=

# Enable analytics tracking (true/false)
VITE_ENABLE_ANALYTICS=false

